{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build/",
    "module": "es2022"
  },
  "exclude": ["node_modules"]
}
